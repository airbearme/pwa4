{
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "dist/public",
    "functions": {
        "api/[...path].ts": {
            "includeFiles": "dist/index.js"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/[...path].ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}